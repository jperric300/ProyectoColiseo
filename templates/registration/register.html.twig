{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
   <link rel="icon" href="images/favicom.ico" type="image/x-icon">
<title>Registro</title>
    <style>
        body {
            background-color: #2c2c2c; /* Fondo gris oscuro */
            color: #fff; /* Texto blanco */
        }

        .container {
            margin-top: 100px; /* Espaciado superior */
            display: flex;
            justify-content: center; /* Centrar horizontalmente */
            align-items: center; /* Centrar verticalmente */
            flex-direction: column; /* Organizar en columna */
        }

        .form-wrapper {
            background-color: rgba(45, 45, 45, 0.9); /* Fondo oscuro semi-transparente */
            padding: 30px; /* Espaciado interno */
            border-radius: 8px; /* Bordes redondeados */
            border: 2px solid #007bff; /* Borde azul */
            width: 100%; /* Ancho completo */
            max-width: 400px; /* Ancho máximo */
        }

        .form-label {
            color: #fff; /* Color de las etiquetas */
        }

        .btn-primary {
            background-color: #007bff; /* Color del botón */
            border: none; /* Sin borde */
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Color del botón en hover */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mb-4">Registro de Usuario</h2>

        <div class="form-wrapper">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger" role="alert">{{ message }}</div>
            {% endfor %}

            {{ form_start(registrationForm) }}
                <div class="mb-3">
                    <label for="correoElectronico" class="form-label">Correo Electrónico</label>
                    {{ form_widget(registrationForm.correoElectronico, {'attr': {'class': 'form-control', 'id': 'correoElectronico'}}) }}
                </div>
                <div class="mb-3">
                    <label for="nombreUsuario" class="form-label">Nombre de Usuario</label>
                    {{ form_widget(registrationForm.nombreUsuario, {'attr': {'class': 'form-control', 'id': 'nombreUsuario'}}) }}
                </div>
                <div class="mb-3">
                    <label for="contraseña" class="form-label">Contraseña</label>
                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'id': 'contraseña'}}) }}
                </div>
                <div class="mb-3">
                    <label for="repetirContraseña" class="form-label">Repetir Contraseña</label>
                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'id': 'repetirContraseña'}}) }}
                </div>

                <button type="submit" class="btn btn-primary w-100">Registrarse</button>
            {{ form_end(registrationForm) }}
        </div>

        <div class="text-center mt-3">
            <a href="{{ path('app_login') }}" style="color: #007bff;">¿Ya tienes una cuenta? Inicia sesión aquí</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
