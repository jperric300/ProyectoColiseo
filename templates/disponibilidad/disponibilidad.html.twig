{% block stylesheets %}
    <style>
        /* Tu código CSS aquí */
        body {
            background-color: #000;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #fff;
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .card {
            background-color: #1a1a1a;
            color: #fff;
            width: 100%;
            max-width: 600px;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        }

        .form-control {
            background-color: #333;
            color: #fff;
            font-size: 1.2rem;
            padding: 12px;
            border-radius: 6px;
            border: 1px solid #007bff;
            margin-bottom: 20px;
            transition: border 0.3s;
        }

        .form-control:focus {
            border-color: #fff;
            outline: none;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
            width: 100%;
            font-size: 1.2rem;
            padding: 15px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .container {
            width: 100%;
            max-width: 700px;
            padding: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Selecciona tu Disponibilidad</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(disponibilidadForm) }}

                <div class="form-group">
                    <label for="diasDisponibles">Días Disponibles</label>
                    {{ form_widget(disponibilidadForm.diasDisponibles, { 'attr': {'class': 'form-control'} }) }}
                </div>

               

                <button type="submit" class="btn btn-primary">Guardar Disponibilidad</button>

                {{ form_end(disponibilidadForm) }}
            </div>
        </div>
    </div>
{% endblock %}
