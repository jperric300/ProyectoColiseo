{# templates/security/login.html.twig #}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Iniciar Sesión</title>
    <style>
        body {
            background-color: #2c2c2c; /* Fondo gris oscuro */
            color: #fff; /* Texto blanco */
        }

        .container {
            margin-top: 100px; /* Espaciado superior */
            background-color: rgba(45, 45, 45, 0.9); /* Fondo oscuro semi-transparente */
            padding: 30px; /* Espaciado interno */
            border-radius: 8px; /* Bordes redondeados */
        }

        .form-label {
            color: #fff; /* Color de las etiquetas */
        }

        .btn-primary {
            background-color: #007bff; /* Color del botón */
            border: none; /* Sin borde */
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Color del botón en hover */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Iniciar Sesión</h2>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error }} {# Muestra el mensaje de error directamente #}
            </div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            {# Token CSRF para proteger el formulario #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="mb-3">
                <label for="nombre_usuario" class="form-label">Nombre de Usuario</label>
                <input type="text" class="form-control" id="nombre_usuario" name="Nombre_Usuario" value="{{ last_username }}" required autofocus>
            </div>

            <div class="mb-3">
                <label for="contraseña" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="contraseña" name="_password" required>
            </div>

            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
        </form>

        <div class="text-center mt-3">
            <a href="{{ path('app_register') }}" style="color: #007bff;">¿No tienes una cuenta? Regístrate aquí</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
