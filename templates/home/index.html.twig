{% extends 'base.html.twig' %}

{% block title %}El Coliseo - Inicio{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #000; /* Fondo negro */
            color: #fff; /* Texto blanco */
            display: flex;
            flex-direction: column; /* Para apilar el título y los botones */
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            text-align: center; /* Alinear texto al centro */
            font-family: 'Arial', sans-serif; /* Fuente para el título */
        }

        h1 {
            font-size: 4em; /* Tamaño grande para el título */
            margin-bottom: 20px; /* Espacio debajo del título */
            text-shadow: 2px 2px 10px rgba(255, 255, 255, 0.5); /* Sombra para el título */
        }

        .subtitle {
            font-size: 1.5em; /* Tamaño de subtítulo */
            margin-bottom: 40px; /* Espacio debajo del subtítulo */
            color: rgba(255, 255, 255, 0.8); /* Color blanco con opacidad */
        }

        .btn {
            display: inline-block;
            margin: 10px;
            padding: 15px 25px;
            background-color: #ff4757; /* Color vibrante para los botones */
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1.2em;
            transition: background-color 0.3s; /* Efecto de transición en el hover */
        }

        .btn:hover {
            background-color: #e84118; /* Color al pasar el cursor */
        }
    </style>

    <h1>El Coliseo</h1>
    <p class="subtitle">Hoy es el primer paso hacia tu mejor versión</p>
    <div>
        <a href="{{ path('app_login') }}" class="btn">Iniciar Sesión</a>
        <a href="{{ path('app_register') }}" class="btn">Registrarse</a>
    </div>
{% endblock %}
