        h1 {
            margin-top:80px;
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 20px;
            color: #FFD700;
            text-transform: uppercase;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
        }
        .card {
            background: #1c1c1c; /* Negro claro */
            border: 2px solid  #FFD700; /* Borde verde brillante */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
            margin-bottom: 20px;
            padding: 20px;
        }
        .card h2 {
            font-size: 2rem;
            margin-bottom: 15px;
            color:  #FFD700;
            text-align: center;
        }
        .card .section {
            margin-bottom: 15px;
        }
        .section-title {
            font-size: 1.5rem;
            color: #f4f4f4;
